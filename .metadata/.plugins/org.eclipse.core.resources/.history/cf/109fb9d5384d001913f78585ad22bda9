package lanqiao;

import java.util.Scanner;

public class Candy {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int children = sc.nextInt();
		int[][] arr = new int[2][children];
		for(int x = 0;x < children;x++) {
			int candy = sc.nextInt();
			arr[0][x] = candy;
		}
		Boolean ifEqual;
		int addCandy = 0;
		while(true) {
			ifEqual = ifEqual(arr,children);
			if(ifEqual == true) {
				break;
			}
			addCandy += findSingle(arr,children);
			giveOthers(arr,children);
		}
		System.out.println(addCandy);
	}
	
	static Boolean ifEqual(int[][] arr,int a) {
		for(int i=0;i<a;++i) {
			int preInt = 0;
			if(i==0) {
				preInt = arr[0][i];
			}else {
				if(preInt != arr[0][i])
					return false;
				else {
					preInt = arr[0][i];
				}
			}
		}
		
		return true;
	}
	static void giveOthers(int[][] arr,int a ) {
		System.out.println(a);
		for(int i=0;i<a;i++) {
			arr[0][i] = arr[1][i] = arr[0][i]/2;
		}
		for(int i=0;i<a;i++) {
			if(i == 0) {
				arr[0][i]+=arr[1][a-1];
				arr[1][a-1] = 0;
			}else {
				arr[0][i]+=arr[1][i-1];
				arr[1][i-1] = 0;
			}
		}
	}
	static int findSingle(int[][] arr,int a) {
		int add = 0;
		for(int i=0;i<a;++i) {
			if(arr[0][i] %2 !=0) {
				arr[0][i]++;
				add++;
			}
		}
		return add;
	}

}
